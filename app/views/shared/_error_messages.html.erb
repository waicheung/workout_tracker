<% if @workout.errors.any? %>
  <div id="error_explanation">
    <div class="error">
      Workout not added, the form contains <%= pluralize(@workout.errors.count, "error") %>:
    </div>
    <ul>
    <% @workout.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>